{
  "manifest_version": 2,
  "name": "Tabs",
  "description": "Vertical tabs",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "tabs",
    "chrome://favicon/"
  ],
  "sidebar_action": {
    "default_icon": "icon.png",
    "default_panel": "panel.html"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "panel.html"
  }
}
